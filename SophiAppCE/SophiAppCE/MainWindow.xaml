<Window x:Class="SophiAppCE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:SophiAppCE.ViewModels"
        xmlns:views="clr-namespace:SophiAppCE.Views"
        xmlns:controls="clr-namespace:SophiAppCE.Controls"
        xmlns:local="clr-namespace:SophiAppCE"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Name="AppWindow"
        Style="{StaticResource MainWindow.Style}">
    <Window.DataContext>
        <viewModel:MainVM />
    </Window.DataContext>
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="5" />
    </WindowChrome.WindowChrome>
    <Border Style="{StaticResource MainWindow.Border.Style}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <controls:TitleBar Grid.Row="0" Text="{Binding AppTitle}" />
            <views:StatusPageStartView x:Name="StatusPageStart" Grid.Row="1" />
            <views:StatusPageContentView x:Name="StatusPageContent" Grid.Row="1" />
            <views:StatusPageFinish x:Name="StatusPageFinish" Grid.Row="1" />
        </Grid>
    </Border>
</Window>