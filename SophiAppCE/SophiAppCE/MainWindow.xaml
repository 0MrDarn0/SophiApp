<Window x:Class="SophiAppCE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SophiAppCE"
        xmlns:controls="clr-namespace:SophiAppCE.Controls"        
        xmlns:view="clr-namespace:SophiAppCE.Views"
        xmlns:viewModel="clr-namespace:SophiAppCE.ViewModel"
        mc:Ignorable="d"
        Name="AppWindow"
        WindowStartupLocation="CenterScreen"                 
        WindowStyle="None"
        AllowsTransparency="True"
        Title="SophiApp Community Edition"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType"
        SnapsToDevicePixels="True"
        ResizeMode="CanResize"
        ShowInTaskbar="True"
        Foreground="{DynamicResource Brush.Window.Foreground}"
        Background="{DynamicResource Brush.Window.Background}"        
        MinHeight="730"
        MinWidth="1260">
    <Window.DataContext>
        <viewModel:AppViewModel/>
    </Window.DataContext>
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="3"/>
    </WindowChrome.WindowChrome>    

    <Border BorderBrush="{DynamicResource Brush.Window.Border.Background}"
            BorderThickness="2">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <controls:TitleBar Text="SophiApp Community Edition"
                               Grid.Row="0"/>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <controls:HamburgerBar Grid.Column="0"/>

                <view:PagePrivacyView Grid.Column="1"
                                      Tag="{StaticResource Tag.Privacy}"/>

            </Grid>
        </Grid>
    </Border>
</Window>
