<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:SophiAppCE.Themes">
    <SolidColorBrush x:Key="Window.Title.Close.Color">#e81123</SolidColorBrush>
    <SolidColorBrush x:Key="System.Foreground.Dark.Color">#404040</SolidColorBrush>
    <SolidColorBrush x:Key="System.Foreground.Light.Color">#ffffff</SolidColorBrush>
    <SolidColorBrush x:Key="System.Background.Color">#ffffff</SolidColorBrush>
    <SolidColorBrush x:Key="System.Accent.Color">#2d78d6</SolidColorBrush>
    <SolidColorBrush x:Key="System.Accent.Light1.Color">#3091e2</SolidColorBrush>
    <SolidColorBrush x:Key="System.Accent.Light2.Color">#5fafef</SolidColorBrush>
    <SolidColorBrush x:Key="System.Accent.Light3.Color">#91c5f0</SolidColorBrush>
    <SolidColorBrush x:Key="System.Accent.Dark1.Color">#1f5aa2</SolidColorBrush>
    <SolidColorBrush x:Key="System.Accent.Dark2.Color">#123d70</SolidColorBrush>
    <SolidColorBrush x:Key="System.Accent.Dark3.Color">#0b2f56</SolidColorBrush>
    <SolidColorBrush x:Key="System.Glass.Color" Color="{Binding Source={x:Static SystemParameters.WindowGlassColor}}"/>
</ResourceDictionary>