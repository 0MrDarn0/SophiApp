<UserControl x:Class="SophiAppCE.Views.StatusPageStartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SophiAppCE.Views"
             xmlns:converters="clr-namespace:SophiAppCE.Converters"
             xmlns:control="clr-namespace:SophiAppCE.Controls"
             mc:Ignorable="d">

    <UserControl.Resources>
        <converters:StatusPageVisibilityConverter x:Key="PageVisibilityConverter"/>
        <converters:BoolToVisibilityConverter x:Key="ProgressBarVisibilityConverter"/>
        <Style TargetType="StackPanel">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>            
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0, 10, 0, 10"/>
        </Style>
        <Style TargetType="local:StatusPageStartView">
            <Setter Property="Tag" Value="{StaticResource Tag.StatusPageStart}" />
            <Setter Property="Visibility">
                <Setter.Value>
                    <MultiBinding Converter="{StaticResource PageVisibilityConverter}">
                        <Binding Path="StatusPagesVisibility" UpdateSourceTrigger="PropertyChanged" />
                        <Binding Path="Tag" RelativeSource="{RelativeSource Self}" />
                    </MultiBinding>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="local:StatusPageStartView">
                        <Grid>
                            <StackPanel>
                                <control:ProgressBarDotsLine Margin="0, 10, 0, 10" Visibility="{Binding StatusPageIsBusy, Converter={StaticResource ProgressBarVisibilityConverter}, UpdateSourceTrigger=PropertyChanged}"/>
                                <TextBlock Text="{Binding StatusPageText, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
</UserControl>