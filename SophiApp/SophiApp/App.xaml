<Application x:Class="SophiApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SophiApp"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>                
                <ResourceDictionary Source="pack://application:,,,/General/ControlsSizes.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/General/IconsPath.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/General/Settings.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Localization/RU.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Themes/DarkBlue.xaml"/>                
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
