<Window x:Class="SophiApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SophiApp"
        xmlns:AppControls="clr-namespace:SophiApp.Controls"        
        mc:Ignorable="d"        
        Name="AppWindow"
        WindowStartupLocation="CenterScreen"         
        Title="{DynamicResource Localization.AppTitle}"
        WindowStyle="None"
        AllowsTransparency="True"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType"
        SnapsToDevicePixels="True"
        ResizeMode="CanResize"
        ShowInTaskbar="True"
        Background="Transparent"        
        MinHeight="{StaticResource Control.MainWindow.MinHeight}" 
        MinWidth="{StaticResource Control.MainWindow.MinWidth}" 
        Loaded="MainWindow_Loaded">
    <Window.Foreground>
        <SolidColorBrush Color="{DynamicResource Color.Window.Foreground}"/>
    </Window.Foreground>    
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="5"/>
    </WindowChrome.WindowChrome>
    <Window.Resources>
        <Style TargetType="Border">
            <Setter Property="BorderThickness" Value="1, 0, 1, 1"/>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <SolidColorBrush Color="{DynamicResource Color.Window.Border}"/>
                </Setter.Value>
            </Setter>            
        </Style>
    </Window.Resources>

    <Border>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="{StaticResource Control.MainWindow.Title.Height}"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <AppControls:TitleBar Grid.Row="0"/>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="{StaticResource Control.Grid.Hamburger.Width}"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <AppControls:Hamburger Grid.Column="0"/>
            </Grid>
        </Grid>
    </Border>    
</Window>
