<UserControl x:Class="SophiApp.Controls.WindowTitle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SophiApp.Controls"
             mc:Ignorable="d"             
             SnapsToDevicePixels="True"
             IsTabStop="False"
             Focusable="False"
             MouseLeftButtonDown="WindowTitle_MouseLeftButtonDown">
    
    <UserControl.Resources>
        <Style TargetType="{x:Type Ellipse}">
            <Setter Property="Width" Value="12"/>
            <Setter Property="Height" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Margin" Value="10, 0, 0, 0"/>
            <Setter Property="Fill" Value="{DynamicResource Brush.Window.Title.Logo.Background}"/>
        </Style>
        <Style x:Key="Style.AppTitle.TextBlock" TargetType="{x:Type TextBlock}">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Text" Value="{DynamicResource CONST.AppName}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Margin" Value="32, 0, 0, 0"/>
        </Style>        
        <Style TargetType="{x:Type local:WindowTitle}">            
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type local:WindowTitle}">
                        <Grid Background="{DynamicResource Brush.Window.Title.Background}">
                            <!--App Logo Ellipse-->
                            <Ellipse/>
                            <!--App Title Text-->
                            <TextBlock Style="{StaticResource Style.AppTitle.TextBlock}"/>
                            <!--App Minimize and Close Buttons-->
                            <local:TitleButtonClose HorizontalAlignment="Right" VerticalAlignment="Center"/>
                            <local:TitleButtonMin HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0, 0, 35, 0"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
</UserControl>
