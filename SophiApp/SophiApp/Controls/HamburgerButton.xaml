<Button x:Class="SophiApp.Controls.HamburgerButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             Foreground="{DynamicResource Color.Window.Foreground}"
             Background="Transparent">
    <Button.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource Font.Montserrat-Medium}"/>
            <Setter Property="FontSize" Value="{StaticResource Control.Hamburger.Button.FontSize}"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="87, 0, 62, 0"/>
        </Style>
    </Button.Resources>
    <Grid>
        <Viewbox Width="{StaticResource Control.Hamburger.Button.Icon.Width}" 
                 Height="{StaticResource Control.Hamburger.Button.Icon.Height}"
                 Margin="25, 0, 35, 0" Stretch="Uniform" VerticalAlignment="Center"
                 HorizontalAlignment="Left">
            <Canvas Canvas.Left="0" Canvas.Top="0" 
                    Width="72" Height="72">
                <Canvas.RenderTransform>
                    <TranslateTransform X="0" Y="0"/>
                </Canvas.RenderTransform>
                <Canvas.Resources/>
                <Path Fill="{DynamicResource Color.Window.Foreground}"
                      Data="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}}, Path=Icon}"/>                
            </Canvas>
        </Viewbox>
        <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}}, Path=Text}"/>
    </Grid>
</Button>