<Window x:Class="SophiAppCE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SophiAppCE"
        xmlns:ac="clr-namespace:SophiAppCE.Controls"        
        mc:Ignorable="d"        
        Name="AppWindow"
        WindowStartupLocation="CenterScreen"         
        Title="{DynamicResource Localization.AppTitle}"
        WindowStyle="None"
        AllowsTransparency="True"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType"
        SnapsToDevicePixels="True"
        ResizeMode="CanResize"
        ShowInTaskbar="True"
        Background="Transparent"        
        MinHeight="{StaticResource Control.MainWindow.MinHeight}"
        MinWidth="{StaticResource Control.MainWindow.MinMaxWidth}" 
        MaxWidth="{StaticResource Control.MainWindow.MinMaxWidth}"
        SourceInitialized="MainWindow_SourceInitialized"
        Loaded="MainWindow_Loaded">    
    <Window.Foreground>
        <SolidColorBrush Color="{DynamicResource Color.Window.Foreground}"/>
    </Window.Foreground>    
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="5"/>
    </WindowChrome.WindowChrome>
    <Window.Resources>
        <Style TargetType="Border">
            <Setter Property="BorderThickness" Value="1, 0, 1, 1"/>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <SolidColorBrush Color="{DynamicResource Color.Window.Border}"/>
                </Setter.Value>
            </Setter>            
        </Style>
        <Style x:Key="Window.Panels.Grid.Style" TargetType="Grid">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="{DynamicResource Color.Window.Background}"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Border>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="{StaticResource Control.MainWindow.Title.Height}"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <ac:TitleBar Grid.Row="0"/>
            <Grid Name="WindowContentGrid"                  
                  Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <ac:Hamburger Grid.Column="0"/>
                <Grid Name="WindowPanelsGrid" 
                      Grid.Column="1"
                      Style="{StaticResource Window.Panels.Grid.Style}">
                    <ac:RoundIndicator x:Name="LoadingIndicator" Visibility="Collapsed"/>
                    <ac:ContentPanel Header="{DynamicResource Localization.Privacy}"/>
                </Grid>
            </Grid>
        </Grid>
    </Border>    
</Window>
